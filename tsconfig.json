{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2015",
    "lib": ["ESNext.Array"],
    "module": "commonjs",
    "declaration": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
